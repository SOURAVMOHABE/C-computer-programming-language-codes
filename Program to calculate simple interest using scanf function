#include<stdio.h>
int main(){
	int principle;
	float rate, time;
	printf("Enter the value of principle \n");
	scanf("%d",&principle);
	printf("Enter the value of rate \n");
	scanf("%f",&rate);
	printf("Enter the value of time \n");
	scanf("%f",&time);
	printf("Simple interest is %f",principle*rate*time/100);
	return 0;
}
